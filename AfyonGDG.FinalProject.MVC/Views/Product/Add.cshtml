@model Product

<form asp-action="Add" asp-controller="Product" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün Adı:</label>
        <input asp-for="Name" type="text" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Ürün Değeri:</label>
        <input asp-for="Price"  type="number" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Ürün Stok Değeri:</label>
        <input asp-for="Stock" type="number" class="form-control">
    </div>


    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Ürün Kategori Id:</label>
        <input asp-for=CategoryId type="number" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Ürün Açıklaması:</label>
        <input asp-for="Description" type="text" class="form-control">
    </div>

    <button type="submit" class="btn btn-outline-info">Kaydet</button>
</form>


