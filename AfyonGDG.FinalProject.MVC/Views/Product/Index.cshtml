@model List<Product>

<a asp-action="Add" asp-controller="Product" type="button" class="btn btn-outline-warning">Ürün Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Ürün Id</th>
            <th scope="col">Ürün Adı</th>
            <th scope="col">Ürün Değeri</th>
            <th scope="col">Ürün Stok</th>
            <th scope="col">Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Product item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.Id" >Detay </a>
                  
                </td>
                <td><a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Sil </a></td>

                <td><a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>
        }


    </tbody>
</table>
